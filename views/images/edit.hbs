<div class="section">
    <div class="container">
        <h3>Edit</h3>
<div class="row">
    <form action="/images/{{image._id}}" method="POST" class="col s12">
        <input type="hidden" name="_method" value="PUT">
        <div class="row">
            <div class="input-field">
                <i class="material-icons prefix">mode_edit</i>
                <input type="text" id="caption" name="caption" autocomplete="off" maxlength="120" data-length="120" value="{{image.caption}}">
                <label for="caption">Caption</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <i class="material-icons prefix">filter</i>
                <select id="status" name="status">
                    {{#select image.status}}
                    <option value="public" selected>Public</option>
                    <option value="private">Private</option>
                    {{/select}}
                </select>
                <label for="status">Status</label>
            </div>
        </div>

        <div class="row">
            <input type="submit" value="Add" class="btn pink">
            <a href="/user/dashboard" class="btn pink darken-1">Cancel</a>
        </div>
    </form>
</div>
    </div>
</div>