<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <p class="text-center mb-3 large-text">Reset your password</p>
      {{>_messages}}
      <form action="/reset/{{token}}" method="POST">
        <div class="form-group">
          <input type="password" id="password" name="password" class="form-control" placeholder="New password" />
        </div>
        <div class="form-group">
          <input type="password" id="password2" name="password2" class="form-control" placeholder="Confirm new password" />
        </div>
        <button type="submit" class="btn btn-primary btn-block submit">Reset password</button>
      </form>
    </div>
  </div>
</div>