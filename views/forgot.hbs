<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <p class="text-center mb-3 large-text">Forgot your password?</p>
      <p class="text-center mb-3">We'll need to send an email to you<p>
      {{>_messages}}
      <form action="/forgot" method="POST">
        <div class="form-group">
          <input type="email" id="email" name="email" class="form-control" placeholder="Email" autocomplete="off"/>
        </div>
        <button type="submit" class="btn btn-primary btn-block submit">Send</button>
      </form>
    </div>
  </div>
</div>